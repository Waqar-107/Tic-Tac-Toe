<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.tic_tac_toe.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/judge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue_grey8"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="" />


    </LinearLayout>


    <!--row 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/amber1">

        <Button
            android:id="@+id/one_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_one"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/one_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_two"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/one_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/one_three"
            android:onClick="changePic"
            android:text="" />

    </LinearLayout>
    <!--row 1-->


    <!--row 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Red11">

        <Button
            android:id="@+id/two_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/two_one"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/two_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/empty"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/two_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/two_three"
            android:onClick="changePic"
            android:text="" />

    </LinearLayout>
    <!--row 2-->


    <!--row 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black">

        <Button
            android:id="@+id/three_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/three_one"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/three_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/three_two"
            android:onClick="changePic"
            android:text="" />

        <Button
            android:id="@+id/three_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/three_three"
            android:onClick="changePic"
            android:text="" />


    </LinearLayout>
    <!--row 3-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/newGame"
            android:onClick="newGame"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:text="New Game"
            android:textAlignment="center"
            android:textColor="@color/blue_grey8"
            android:textSize="25dp" />

    </LinearLayout>


</LinearLayout>
